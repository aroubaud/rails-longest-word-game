<h1>New Game</h1>

<div class="grid">
  <% @letters.each do |letter| %>
  <ul>
    <li><%= letter %></li>
  </ul>
  <% end %>
</div>

<div class="form">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <p>What is the longest word you can find?</p>
    <input id="input" type="text" name="word">
    <input id="grid" name="grid" type="hidden" value="<%= @letters.join %>">
    <input id="button" type="submit" value="Play">
  </form>
</div>


